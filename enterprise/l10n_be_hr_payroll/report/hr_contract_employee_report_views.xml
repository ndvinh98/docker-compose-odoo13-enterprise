<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="contract_employee_report_view_dashboard_inherit" model="ir.ui.view">
            <field name="name">contract.employee.report.view.inherit.dashboard</field>
            <field name="model">hr.contract.employee.report</field>
            <field name="inherit_id" ref="hr_contract_reports.contract_employee_report_view_dashboard"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@col='4']" position="inside">
                    <aggregate name="fte" string="Full Time Equivalent" field="fte"/>
                </xpath>
            </field>
        </record>

        <record id="contract_employee_report_view_pivot_inherit" model="ir.ui.view">
            <field name="name">contract.employee.report.view.inherit.pivot</field>
            <field name="model">hr.contract.employee.report</field>
            <field name="inherit_id" ref="hr_contract_reports.contract_employee_report_view_pivot"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='wage']" position="after">
                    <field name="final_yearly_costs" type="measure"/>
                    <field name="fuel_card" type="measure"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
