<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="social_post_view_form" model="ir.ui.view">
        <field name="name">social.post.view.form.inherit.facebook</field>
        <field name="model">social.post</field>
        <field name="inherit_id" ref="social.social_post_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='previews_placeholder']" position="inside">
                <field name="display_facebook_preview" invisible="1" />
                <field name="facebook_preview" readonly="1" nolabel="1" colspan="2" widget="social_post_preview"
                    attrs="{'invisible': [('display_facebook_preview', '=', False)]}"
                    class="o_social_preview_wrapper m-0 px-4 py-5 bg-200"/>
            </xpath>
        </field>
    </record>
</data>
</odoo>
