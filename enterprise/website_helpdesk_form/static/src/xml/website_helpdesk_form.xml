<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="website_helpdesk_form.default_ticket_form">
        <div class="form-group row form-field o_website_form_required_custom">
            <div class="col-lg-3 col-md-4">
                <label class="col-form-label" for="partner_name">Your Name</label>
            </div>
            <div class="col-lg-7 col-md-8">
                <input type="text" class="form-control o_website_form_input" name="partner_name" required=""/>
            </div>
        </div>
        <div class="form-group row form-field o_website_form_required_custom">
            <div class="col-lg-3 col-md-4">
                <label class="col-form-label" for="partner_email">Your Email</label>
            </div>
            <div class="col-lg-7 col-md-8">
                <input type="text" class="form-control o_website_form_input" name="partner_email" required=""/>
            </div>
        </div>
        <div class="form-group row form-field o_website_form_required">
            <div class="col-lg-3 col-md-4">
                <label class="col-form-label" for="name">Subject</label>
            </div>
            <div class="col-lg-7 col-md-8">
                <input type="text" class="form-control o_website_form_input" name="name" required="" />
            </div>
        </div>
        <div class="form-group row form-field">
            <div class="col-lg-3 col-md-4">
                <label class="col-form-label" for="description">Description</label>
            </div>
            <div class="col-lg-7 col-md-8">
                <input type="text" class="form-control o_website_form_input" name="description" />
            </div>
        </div>
        <div class="form-group row form-field o_website_form_custom">
            <div class="col-lg-3 col-md-4">
                <label class="col-form-label" for="attachment">Attachment</label>
            </div>
            <div class="col-lg-7 col-md-8">
                <input type="file" class="form-control o_website_form_input" name="attachment" />
            </div>
        </div>
    </t>

</templates>
